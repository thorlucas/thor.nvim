{
	"diagnostic.virtualText": true,
	"diagnostic-languageserver.filetypes": {
		"python": "pylint"
	},
	"diagnostic-languageserver.linters": {
		"pylint": {
			"sourceName": "pylint",
			"command": "pylint",
			"args": [
				"--output-format",
				"text",
				"--score",
				"no",
				"--msg-template",
				"'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
				"%file"
			],
			"formatPattern": [
				"^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
				{
					"line": 1,
					"column": 2,
					"security": 3,
					"message": 4
				}
			],
			"rootPatterns": [
				".git",
				"pyproject.toml",
				"setup.py"
			],
			"securities": {
				"informational": "hint",
				"refactor": "info",
				"convention": "info",
				"warning": "warning",
				"error": "error",
				"fatl": "error"
			},
			"offsetColumn": 1,
			"formatLines": 1
		}
	},
	"coc.preferences.formatOnSaveFiletypes": [
		"*"
	]
}
